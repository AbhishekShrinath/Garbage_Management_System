<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/admin_view_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_toRightOf="@+id/l"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:layout_below="@id/admin_view_email"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/admin_view_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_below="@id/admin_view_email"
            android:layout_toRightOf="@+id/l1"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="area: "
            android:layout_below="@id/l1"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/admin_view_Comlaint_Area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="area"
            android:layout_below="@id/l1"
            android:layout_toRightOf="@+id/l2"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint: "
            android:layout_below="@id/l2"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            />
        <TextView
            android:id="@+id/admin_view_view_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="complaint"
            android:layout_below="@id/l2"
            android:layout_toRightOf="@+id/l3"
            android:textSize="@dimen/_15ssp"
            />
        <Button
            android:id="@+id/updatestatus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:layout_margin="@dimen/_5sdp"
            app:backgroundTint="@null"
            android:background="@drawable/cystom_btn_green"
            android:layout_below="@+id/admin_view_view_complaint"
            android:textAllCaps="false"
            />
    </RelativeLayout>
</LinearLayout>