<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F0F1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/_5sdp"
        >
    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bin ID: "
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
    android:id="@+id/Bin_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ID"
    android:textSize="@dimen/_15sdp"
    android:layout_toRightOf="@+id/a"
    android:textColor="@color/teal_700"
    android:textStyle="bold"
    />
    <TextView
        android:id="@+id/a11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@+id/a"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="@dimen/_15sdp"
        android:layout_toRightOf="@+id/a11"
        android:layout_below="@+id/Bin_id"
        android:textColor="#FF5722"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/a16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Complete : "
            android:textSize="@dimen/_15sdp"
            android:layout_below="@+id/update_bin_status"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/update_bin_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Yet"
            android:textSize="@dimen/_15sdp"
            android:layout_toRightOf="@+id/a16"
            android:layout_below="@+id/update_bin_status"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            />



<TextView
    android:id="@+id/a1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Area : "
    android:textSize="@dimen/_15sdp"
    android:layout_below="@+id/update_bin_dateTime"
    android:textColor="@color/black"
    android:textStyle="bold"
    />
    <TextView
        android:id="@+id/update_bin_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textSize="@dimen/_15sdp"
        android:layout_toRightOf="@+id/a1"
        android:layout_below="@+id/update_bin_dateTime"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locality : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a1"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="locality"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a1"
        android:layout_toRightOf="@+id/a2"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/update_bin_locality"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="city"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/update_bin_locality"
        android:layout_toRightOf="@+id/a4"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Type : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a4"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a4"
        android:layout_toRightOf="@+id/a5"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a5"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRiver"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a5"
        android:layout_toRightOf="@+id/a6"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleaning period : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a6"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_cleaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cleaning"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a6"
        android:layout_toRightOf="@+id/a7"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a7"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/a7"
        android:layout_toRightOf="@+id/a8"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitute : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/update_bin_route"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_latitute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latitute"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/update_bin_route"
        android:layout_toRightOf="@+id/a9"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/a10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitute : "
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/update_bin_latitute"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/update_bin_longitute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitute"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/update_bin_latitute"
        android:layout_toRightOf="@+id/a10"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/updatemap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_below="@+id/a10"
        android:text="update Map"
        app:backgroundTint="@null"
        android:background="@drawable/custom_btn_blue"
        />
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_below="@+id/a10"
            app:backgroundTint="@null"
            android:background="@drawable/custom_red_btn"
            android:layout_toRightOf="@+id/updatemap"
            android:text="delete"
            />
    </RelativeLayout>
</RelativeLayout>