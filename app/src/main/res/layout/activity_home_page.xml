<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:textSize="@dimen/_27ssp"
        android:background="#CBE792"
        android:text="Grabage Management"
        android:textColor="#009688"
        android:textStyle="bold|italic"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_225sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/garbageimg2"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias=".09"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    app:layout_constraintTop_toBottomOf="@+id/abc"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
    <Button
        android:id="@+id/userlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/_10sdp"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:text="User login"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/userregistor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/custom_btn"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:text="User Registor"
        android:textSize="20sp"
        android:layout_below="@+id/userlogin"
        />
    <Button
        android:id="@+id/adminlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/custom_btn"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"

        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:text="Admin login"
        android:textSize="20sp"
        android:layout_below="@+id/userregistor"
        />
    <Button
        android:id="@+id/driverlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_btn"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:text="Driver login"
        android:textSize="20sp"
        android:layout_below="@+id/adminlogin"
        />
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>