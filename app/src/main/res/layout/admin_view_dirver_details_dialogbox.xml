<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_10sdp">
        <TextView
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/txt4_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:drawableLeft="@drawable/ic_baseline_email_24" />

            <TextView
                android:drawableStart="@drawable/user"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/edit4_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Name"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/user" />

            <TextView

                android:id="@+id/edit4_driver_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:text="Enter number"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_baseline_contact_phone_24"
                android:drawableLeft="@drawable/ic_baseline_contact_phone_24" />

            <TextView
                android:id="@+id/edit4_driver_Aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:text="Enter Aadhar"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/aadhar"
                android:drawableLeft="@drawable/aadhar" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24"
 />

    </LinearLayout>
</LinearLayout>
