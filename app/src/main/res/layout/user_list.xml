<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:background="#BEF4E3"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/sss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"

            />
        <TextView
            android:id="@+id/list_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/sss"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/sss"
            android:layout_margin="5dp"

            />
        <TextView
            android:id="@+id/list_user_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/ccc"
            android:layout_below="@+id/list_user_name"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number: "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/list_user_Email"
            android:layout_margin="5dp"

            />
        <TextView
            android:id="@+id/list_user_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/ddd"
            android:layout_below="@+id/list_user_Email"
            android:layout_margin="5dp"
            />

    </RelativeLayout>
</RelativeLayout>